# Application Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Logging
LOG_LEVEL=INFO

# Monitoring (Production)
GRAFANA_PASSWORD=admin